<!--[if gt IE 9]><!--><html class="" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ html_title }}</title>
    {% if html_description %}
      <meta name="description" content="{{ html_description }}">
    {% endif %}
    {% if html_keywords %}
      <meta name="keywords" content="{{ html_keywords }}">
    {% endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <link rel="stylesheet" href="/assets/stylesheets/main.css">
    <script src="/assets/javascript/libs/modernizr-2.6.2.min.js"></script>
  </head>

  <body>

    {# START: Top Navbar #}
    <div id="main-nav">
      <div class="row navbar">
        <a class="toggle" href="#" gumby-trigger=".navbar > ul"> <i class="icon-menu"></i> </a>
      	<h1 title="People's Open Network | Home" class="four columns logo">
          <a href="/"><img src="/assets/images/navbar-logo.png" gumby-retina /></a>
      	</h1>
        <ul id="menu-main" class="twelve columns">
          <li>
            <a href="/about">About</a>
            <div class="dropdown"><ul>
              <li><a href="/about/workshops">Workshops</a></li>
              <li><a href="https://peoplesopen.net/blog">Blog</a></li>
            </ul></div>
          </li>
	        <li>
            <a href="/learn">Learn</a>
            <div class="dropdown"><ul>
              <li><a href="/learn/faqs">FAQs</a></li>
              <li><a href="/learn/development">Develop</a></li>
              <li><a href="/learn/build">Build</a></li>
            </ul></div>
          </li>
          <li>
            <a href="/join">Join</a>
            <div class="dropdown"><ul>
              <li><a href="/join/help-out">Help Out</a></li>
              <li><a href="/join/request-a-node">Request a Node</a></li>
              <li><a href="/join/contact">Contact</a></li>
            </ul></div>
          </li>
          <li><a href="/map">Map</a>
            <div class="dropdown"><ul>
              <li><a href="https://peoplesopen.net/monitor">Monitor</a></li>
            </ul></div>
          </li>
          <li><a href="https://www.patreon.com/peoplesopennet">Donate</a></li>
        </ul>
      </div>
    </div>
    {# END: Top Navbar #}

    {{ body }}

    {# START: Site Footer #}
    <footer role="contentinfo" class="site-footer">
      <div id="mc_embed_signup" class="row newsletter-signup-form">
        {# Begin MailChimp Signup Form #}
